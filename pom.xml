<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>org.intelligents-ia</groupId>
		<artifactId>intelligents-ia</artifactId>
		<version>1.4.3</version>
	</parent>
	<groupId>org.intelligents-ia.keystone</groupId>
	<artifactId>keystone</artifactId>
	<packaging>pom</packaging>
	<name>keystone</name>
	<version>2.6.1-SNAPSHOT</version>
	<description>
        1. Stone wedge-shaped arch which maintains a vault [Architecture].
        2. A central element on which everything depends.
    </description>
	<url>http://intelligents-ia.com/index.php/category/technique/keystone</url>
	<inceptionYear>2010</inceptionYear>
	<developers>
		<developer>
			<id>jerome.guibert.intelligents.ia.com</id>
			<name>Jerome Guibert</name>
			<organization>Intelligents-ia</organization>
			<email>jguibert@intelligents-ia.com</email>
		</developer>
	</developers>
	<licenses>
		<license>
			<name>The Apache Software License, Version 2.0</name>
			<url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
		</license>
	</licenses>
	<scm>
		<url>https://github.com/geronimo-iia/keystone.git</url>
		<connection>scm:git:https://github.com/geronimo-iia/keystone.git</connection>
		<developerConnection>scm:git:https://github.com/geronimo-iia/keystone.git</developerConnection>
	</scm>
	<organization>
		<name>Intelligents-ia</name>
		<url>http://intelligents-ia.com</url>
	</organization>
	<!-- ******************************************************************* -->
	<!-- DEPENDENCIES MANAGEMENT -->
	<!-- ******************************************************************* -->
	<dependencyManagement>
		<dependencies>
			<!-- ******************************************************************* -->
			<!-- ASYNC HTTP -->
			<!-- ******************************************************************* -->
			<dependency>
				<groupId>com.ning</groupId>
				<artifactId>async-http-client</artifactId>
				<version>1.7.5</version>
			</dependency>
			<!-- ******************************************************************* -->
			<!-- JACKSON -->
			<!-- ******************************************************************* -->
			<dependency>
				<groupId>com.fasterxml.jackson.core</groupId>
				<artifactId>jackson-databind</artifactId>
				<version>2.1.0</version>
			</dependency>
			<dependency>
				<groupId>com.fasterxml.jackson.dataformat</groupId>
				<artifactId>jackson-dataformat-xml</artifactId>
				<version>2.1.0</version>
			</dependency>
			<dependency>
				<groupId>com.fasterxml.jackson.module</groupId>
				<artifactId>jackson-module-jaxb-annotations</artifactId>
				<version>2.1.0</version>
			</dependency>
			<!-- ******************************************************************* -->
			<!-- APACHE VFS" -->
			<!-- ******************************************************************* -->
			<dependency>
				<groupId>org.apache.commons</groupId>
				<artifactId>commons-vfs2</artifactId>
				<version>2.0</version>
			</dependency>
			<!-- ******************************************************************* -->
			<!-- JCL -->
			<!-- ******************************************************************* -->
			<dependency>
				<groupId>org.xeustechnologies</groupId>
				<artifactId>jcl-core</artifactId>
				<version>2.4</version>
				<optional>true</optional>
			</dependency>
			<!-- ******************************************************************* -->
			<!-- EVENT BUS -->
			<!-- ******************************************************************* -->
			<dependency>
				<groupId>org.intelligents-ia</groupId>
				<artifactId>event-bus</artifactId>
				<version>1.3.0</version>
			</dependency>
		</dependencies>
	</dependencyManagement>
	<!-- ******************************************************************* -->
	<!-- DEPENDENCIES -->
	<!-- ******************************************************************* -->
	<dependencies>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>4.10</version>
			<scope>test</scope>
		</dependency>
	</dependencies>
	<!-- ******************************************************************* -->
	<!-- MODULE LIST -->
	<!-- ******************************************************************* -->
	<modules>
		<module>modules</module>
		<module>extras</module>
		<module>samples</module>
	</modules>
	<!-- ******************************************************************* -->
	<!-- ONE REPOSITORY to rule them all -->
	<!-- ******************************************************************* -->
	<repositories>
		<repository>
			<id>intelligents-ia-releases</id>
			<name>Intelligents-ia releases repository</name>
			<url>http://mvn.intelligents-ia.com/releases</url>
			<releases>
				<enabled>true</enabled>
			</releases>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
		</repository>
	</repositories>
	<!-- ******************************************************************* -->
	<!-- PROPERTIES -->
	<!-- ******************************************************************* -->
	<properties>
		<license.header.path>header.txt</license.header.path>
	</properties>
</project>
